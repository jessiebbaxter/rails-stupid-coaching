<div class="wrapper">
	<div class="container">
		<h1>Answer Page</h1>
		<div class="card">
			<h2><%= params[:question].capitalize %></h2>
			<p>- You</p>
		</div>

		<div class="card answer">
			<h2><%= @answer %></h2>
			<p>- Your coach</p>
		</div>
		<div class="btn">
			<%= link_to "Ask a new question", ask_path %>
		</div>
	</div>
</div>

